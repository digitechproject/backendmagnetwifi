{
    "version": 2,
    "builds": [
      {
        "src": "api/*.php",
        "use": "@vercel/php"
      },
      {
        "src": "assets/*",
        "use": "@vercel/static"
      }
    ],
    "routes": [
      { "src": "/api/(.*)", "dest": "/api/$1" },
      { "src": "/assets/(.*)", "dest": "/assets/$1" }
    ],
    "buildCommand": "apt-get update && apt-get install -y libssl-dev && vercel build"
  }
  